{
  "$schema": "https://cdn.jsdelivr.net/npm/@micro-lc/interfaces@latest/schemas/v2/config.schema.json",
  "version": 2,
  "layout": {
    "sources": "https://cdn.jsdelivr.net/npm/@micro-lc/layout@latest/dist/mlc-layout.js",
    "content": [
      {
        "tag": "mlc-layout",
        "properties": {
          "mode": "topBar",
          "logo": {
            "url": "/img/favicon.png"
          },
          "menuItems": [
            {
              "icon": {
                "library": "@ant-design/icons-svg",
                "selector": "GlobalOutlined"
              },
              "id": "react",
              "label": "React",
              "type": "application"
            },
            {
              "icon": {
                "library": "@ant-design/icons-svg",
                "selector": "MessageOutlined"
              },
              "id": "angular12",
              "label": "Angular12",
              "type": "application"
            },
            {
              "icon": {
                "library": "@ant-design/icons-svg",
                "selector": "FunnelPlotOutlined"
              },
              "id": "angular13",
              "label": "Angular13",
              "type": "application"
            },
            {
              "icon": {
                "library": "@ant-design/icons-svg",
                "selector": "HomeOutlined"
              },
              "id": "vue3",
              "label": "Vue 3",
              "type": "application"
            }
          ]
        }
      }
    ]
  },
  "applications": {
    "react": {
      "integrationMode": "parcel",
      "route": "./",
      "entry": "/applications/react-hash-router/"
    },
    "angular12": {
      "integrationMode": "parcel",
      "route": "./angular12/",
      "injectBase": true,
      "entry": "/applications/angular12/"
    },
    "angular13": {
      "integrationMode": "parcel",
      "route": "./angular13/",
      "injectBase": true,
      "entry": "/applications/angular13/"
    },
    "vue3": {
      "integrationMode": "parcel",
      "route": "./vue3/",
      "injectBase": true,
      "entry": "/applications/vue/"
    }
  }
}
