{
  "name": "documentation",
  "version": "2.0.0",
  "description": "micro-lc & add-ons documentation",
  "license": "SEE LICENSE IN LICENSE",
  "packageManager": "yarn@3.6.3",
  "workspaces": [
    "applications/*"
  ],
  "scripts": {
    "vue": "yarn workspace @micro-lc/vue3",
    "cleanup": "rimraf build node_modules",
    "spellcheck": "cspell \"./docs/**\"",
    "lint:code": "eslint . --ext .mjs,.js,.jsx,.ts,.tsx --resolve-plugins-relative-to .",
    "lint:style": "stylelint \"**/*.{css}\" --allow-empty-input",
    "lint": "NODE_OPTIONS=--max-old-space-size=10000 yarn run-p lint:code lint:style",
    "build-static-frames": "ts-node scripts/interpolate-templates.ts",
    "build-vue": "yarn vue build",
    "build-docusaurus": "docusaurus build",
    "copy-static": "ts-node scripts/copy-static.ts",
    "start": "docusaurus start",
    "prepare": "run-s build-vue copy-static build-static-frames",
    "build": "run-s prepare build-docusaurus",
    "test:e2e": "playwright test",
    "tls:config": "ts-node scripts/tls-config.ts",
    "serve": "ts-node tests/server.ts",
    "check:types": "yarn tsc --noEmit && echo \"âœ“ check types\"",
    "postinstall": "husky install"
  },
  "dependencies": {
    "@docusaurus/core": "^2.4.1",
    "@docusaurus/plugin-content-blog": "^2.4.1",
    "@docusaurus/plugin-content-docs": "^2.4.1",
    "@docusaurus/plugin-content-pages": "^2.4.1",
    "@docusaurus/theme-classic": "^2.4.1",
    "@docusaurus/theme-common": "^2.4.1",
    "@docusaurus/theme-search-algolia": "^2.4.1",
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@mdx-js/react": "1.6.22",
    "@micro-lc/post-channel": "^0.1.0",
    "@mui/material": "^5.14.8",
    "clsx": "^2.0.0",
    "js-yaml": "^4.1.0",
    "monaco-editor": "^0.43.0",
    "monaco-yaml": "^5.1.0",
    "prism-react-renderer": "^1.3.5",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rxjs": "^7.8.1",
    "strip-json-comments": "^5.0.1"
  },
  "devDependencies": {
    "@cspell/cspell-types": "^7.3.5",
    "@docusaurus/module-type-aliases": "^2.4.1",
    "@micro-lc/interfaces": "^1.1.0",
    "@playwright/test": "^1.37.1",
    "@tsconfig/docusaurus": "^2.0.1",
    "@types/eslint": "^8.44.2",
    "@types/express": "^4.17.17",
    "@types/fs-extra": "^11.0.1",
    "@types/glob": "^8.1.0",
    "@types/js-yaml": "^4.0.6",
    "@types/json-schema": "^7.0.13",
    "@types/node": "^20.6.2",
    "@types/react": "^18.2.21",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.7.5",
    "@typescript-eslint/parser": "^6.7.0",
    "confusing-browser-globals": "^1.0.11",
    "copy-webpack-plugin": "^11.0.0",
    "cspell": "^7.3.6",
    "docusaurus-plugin-remote-content": "^3.1.0",
    "docusaurus2-dotenv": "^1.4.0",
    "dotenv": "^16.3.1",
    "eslint": "^8.48.0",
    "eslint-config-esnext": "^4.1.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-n": "^16.1.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-sort-keys-fix": "^1.1.2",
    "eslint-plugin-typescript-sort-keys": "^3.0.0",
    "eslint-visitor-keys": "^3.4.3",
    "express": "^4.18.2",
    "fs-extra": "^11.1.1",
    "glob": "^10.3.4",
    "husky": "^8.0.3",
    "json-schema": "^0.4.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^5.0.1",
    "stylelint": "^15.10.3",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-standard": "^34.0.0",
    "stylelint-declaration-block-no-ignored-properties": "^2.7.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
